{% extends 'default/docs/base.html.twig' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block breadcrumb %}
    {% include 'default/widgets/breadcrumbs.html.twig' with {
        'links': breadcrumbs
    } only %}
{% endblock %}

{% block content %}
    <script type="text/javascript">
        $(document).ready(function() {
            var wbbOpt = {
                buttons: "bold,italic,underline,|,img,link,|,code,quote"
            }
            $(".page-editor").wysibb(wbbOpt);
        });
    </script>
    {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
        {{ form_row(form.PageContent) }}
        <input type="submit" id="form_Save" name="form[Save]" style="float:right" class="btn-default btn" value="Save Documentation" />
    {{ form_end(form) }}
{% endblock %}