<style type="text/css">
    .wysibb{
        display: none;
    }
    #{{ id|raw }}:hover{
        opacity: 0.8;
    }
</style>
<a href="javascript:void(0)" onclick="toggleEdit();">Edit page</a>
<script type="text/javascript">
    function toggleEdit(){
        $(".wysibb").slideToggle("slow", function(){
            // Animation complete.
        });
    }
    $(document).ready(function() {
        var wbbOpt = {
            buttons: "bold,italic,underline,|,img,link,|,code,quote"
        }
        $("#page-editor").wysibb(wbbOpt);
    });
</script>